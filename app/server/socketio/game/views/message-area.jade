#chat-modal.modal.fade
	.modal-dialog.modal-sm
		.modal-content
			.modal-header.text-center
				a.close(data-dismiss='modal') &times;
				h3 Chat
			.modal-body.text-center
				input(type='text' placeholder='type to chat' ng-model='message')
				button(ng-click='sendMessage()') Send
				div(style='height:300px; overflow:auto;')
					div#ocbox
					div#ccbox
