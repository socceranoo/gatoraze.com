//h3.text-center Results
ul.search-list.list-unstyled.text-center
	li.search-result(ng-repeat='video in searchList')
		a(href='javascript:void(0);' ng-click='loadVideoClick(video)')
			img.my-thumbnail.img-responsive.img-thumbnail(ng-src='{{video.snippet.thumbnails.high.url}}')
		h4.video-header
			a.control.glyphicon.glyphicon-plus-sign.pull-right.color-metroNavy(ng-hide='playList.videos[video.id]' href='javascript:void(0);' ng-click='addVideoClick(video)')
			span.control.glyphicon.glyphicon-ok-sign.pull-right(ng-show='playList.videos[video.id]').pull-right.color-metroGreen
			a(href='javascript:void(0);' ng-click='loadVideoClick(video)')
				p.small-title.color-clouds(ng-bind='video.snippet.title')
		h4.video-footer
			span.video-detail
				span.glyphicon.glyphicon-eye-open.control.color-metroGreen
				span.color-clouds(ng-bind='convertNumber(video.statistics.viewCount)')
			span.video-detail
				span.glyphicon.glyphicon-thumbs-up.control.color-metroGreen
				span.color-metroGreen(ng-bind='convertNumber(video.statistics.likeCount)')
			span.video-detail
				span.glyphicon.glyphicon-thumbs-down.control.color-metroRed
				span.color-metroRed(ng-bind='convertNumber(video.statistics.dislikeCount)')
			span.video-detail
				span.color-metroNavy(ng-bind='convertDuration(video.contentDetails.duration)')
h3
	a.control.glyphicon.glyphicon-backward.pull-left(href='javascript:void(0);' ng-click='showSearchPage(prevPageToken)')
	a.control.glyphicon.glyphicon-forward.pull-right(href='javascript:void(0);' ng-click='showSearchPage(nextPageToken)')
